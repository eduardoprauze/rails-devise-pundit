<div class="authform">
  <%= form_for(@label) do |f| %>
  <% if @label.errors.any? %>
  <% @label.errors.each do |name, msg| %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, "#{name} #{msg}", :id => "flash_#{name}" %>
    </div>
  <% end %>
  <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :colour %>
      <%= f.select :colour, Label::COLOURS.map { |c| [c[0], c[1], style: "color: #{ hexa_color(c[0]) }"] }, {},  { :class=>'form-control'}  %>
    </div>
    <%= f.submit 'Save', :class => 'button right' %>
  <% end %>
</div>
